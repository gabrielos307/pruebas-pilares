<div class="container">
    <form action="/productos/update/<%=producto.id%>" method="POST">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" value="<%=producto.nombre %>" name="nombre" id="nombre" placeholder="<%= producto.nombre%>">
          </div>
        <div class="form-group">
            <label for="descripcion">Descripcion</label>
            <textarea class="form-control" value="<%= producto.descripcion %>" name="descripcion" id="descripcion" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="precio">Precio</label>
            <input type="number" class="form-control" value="<%= producto.precio %>" name="precio" id="precio" placeholder="<%= producto.precio %>">
        </div>
        <!--Submit es para mandar los datos del formulario-->
        <button type="submit" class="btn btn-primary">Editar</button>
    </form>
  </div>