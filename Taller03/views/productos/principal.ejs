<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Precio</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% productos.forEach(function(i){ %>
    <tr> <!--Fila-->
      <td><%= i.id %></td>
      <td><%= i.nombre %></td>
      <td><%= i.descripcion %></td>
      <td><%= i.precio %></td>
      <td><a type="button" href="/productos/edit/<%= i.id %>" class="btn btn-outline-success">Editar</a>
        <form action="/productos/delete/<%= i.id%>" method="POST">
          <button type="submit" class="btn btn-outline-danger">Borrar</button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>








